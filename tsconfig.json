{
  "compilerOptions": {
      "lib": ["es2020"],
      "module": "commonjs",
      "target": "es2020",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,

      "strictNullChecks": true,
      "noImplicitAny": true,
      "sourceMap": false,
      "outDir": "dist",
      //"baseUrl": ".",
      //"strict": true,
  },
  "include": [
      "src/**/*", 
      //"local_modules/**/*"  
  ],
  "exclude": [
    "node_modules"
  ]
}